datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id            String      @id @default(uuid())
  email         String      @unique
  firstName     String   
  lastName      String   
  phone         String  
  password      String
  isBlacklisted Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now())

  wallet        Wallet?
  transactions          Transaction[]

  @@index([email])
  @@map("users")
}

model Wallet {
  id        String      @id @default(uuid())
  userId    String      @unique
  balance   Decimal  @default(0) 
  currency  String  
  account_name String
  wallet_token String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions        Transaction[] @relation("WalletTransactions")
  receivedTransfers   Transaction[] @relation("RecipientTransactions")

  @@index([userId])
  @@map("wallets")
}

model Transaction {
  id                String      @id @default(uuid())
  walletId          String           
  userId            String
  type              TransactionType
  amount            Decimal         @default(0) 
  reference         String           
  description       String?        
  recipientWalletId String?          
  status            TransactionStatus @default(COMPLETED)
  metadata          Json?
  createdAt         DateTime        @default(now())

  wallet            Wallet          @relation("WalletTransactions", fields: [walletId], references: [id], onDelete: Cascade)
  recipientWallet   Wallet?         @relation("RecipientTransactions", fields: [recipientWalletId], references: [id], onDelete: SetNull)
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([walletId])
  @@index([reference])
  @@index([createdAt])
  @@index([walletId, createdAt])
  @@map("transactions")
}

enum TransactionType {
  CREDIT
  DEBIT
  TRANSFER
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}